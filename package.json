{
  "version": "0.0.1",
  "license": "MIT",
  "author": "nazarpunk",
  "publisher": "nazarpunk",
  "name": "jass-vanilla",
  "displayName": "jass-vanilla",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/nazarpunk/vscode-jass-vanilla"
  },
  "keywords": ["jass"],
  "categories": [
    "Programming Languages",
    "Snippets",
    "Formatters"
  ],
  "activationEvents": [],
  "contributes": {
    "languages": [
      {
        "id": "jass",
        "aliases": ["JASS", "jass"],
        "extensions": ["j"],
        "configuration": "./syntaxes/jass.language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "jass",
        "scopeName": "source.jass",
        "path": "./syntaxes/jass.tmLanguage.json"
      }
    ]
  },
  "contributors": [],
  "description": "Vanilla JASS syntax.",
  "devDependencies": {
    "esbuild": "^0.18.11",
    "@types/vscode": "^1.80.0",
    "@types/node": "20.2.5",
    "vsce": "^2.15.0",
    "chevrotain": "^10.5.0"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base",
    "build": "vsce package",
    "publish": "vsce publish patch",
    "esbuild-base": "esbuild src/extension.ts --outfile=out/extension.js --bundle --external:vscode --format=cjs --platform=node --tree-shaking=true --sourcemap",
    "esbuild": "npm run esbuild-base",
    "esbuild-watch": "npm run esbuild-base -- --watch"
  }
}